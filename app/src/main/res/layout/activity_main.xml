<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/activity_main_drawer">

    <!--main activity-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        tools:context=".MainActivity">
        <TextView
            android:text="Môn học hiện tại"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/imgv"
            android:layout_marginVertical="10dp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="120dp"/>
        <RelativeLayout
            android:background="#00BCD4"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/ll_mh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_lb_name"
                    android:text="Môn Học:"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_name"
                    android:text="Lập trình Java"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_room"
                android:layout_below="@+id/ll_mh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_lb_room"
                    android:text="Phòng Học:"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_room"
                    android:text="303-A2"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_gv"
                android:layout_below="@+id/ll_room"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_lb_gv"
                    android:text="Giảng viên:"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_gv"
                    android:text="Nguyễn Mạnh Sơn"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_st"
                android:layout_below="@+id/ll_gv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_lb_st"
                    android:text="Giờ bắt đầu:"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_st"
                    android:text="9:00"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
            android:id="@+id/ll_et"
            android:layout_below="@+id/ll_st"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_lb_et"
                android:text="Giờ kết thúc:"
                android:textColor="#FFF"
                android:textSize="@dimen/textSize_subject"
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_et"
                android:text="11:00"
                android:textColor="#FFF"
                android:textSize="@dimen/textSize_subject"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_status"
                android:layout_below="@+id/ll_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_lb_status"
                    android:text="Trạng thái:"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_status"
                    android:text="Chưa điểm danh"
                    android:textColor="#FFF"
                    android:textSize="@dimen/textSize_subject"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
        <Button
            android:id="@+id/btn_dd"
            android:layout_marginVertical="16dp"
            android:text="Điểm danh"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!--menu left-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">
            <!--Header-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/navigation_header_height"
                android:background="@color/colorPrimary"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <ImageView
                    android:id="@+id/activity_main_imv_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/activity_main_tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="PTIT"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <TextView
                    android:id="@+id/activity_main_tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="ptit.edut.vn"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

            </LinearLayout>
            <!-- thong tin ca nhan-->
            <Button
                android:id="@+id/btn_person_info"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Thông tin cá nhân" />

            <Button
                android:id="@+id/btn_view_schedule"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Xem thời khoá biểu" />

            <Button
                android:id="@+id/btn_view_checkin_history"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Xem lịch sử điểm danh" />

        </LinearLayout>


    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>