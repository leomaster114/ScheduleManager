<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MHFragment">

    <FrameLayout
        android:id="@+id/replaceFragment1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="Môn học hiện tại"
                android:textColor="#000"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imgv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="10dp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="10dp"
                android:background="#00BCD4">

                <LinearLayout
                    android:id="@+id/ll_mh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_lb_name"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Môn Học:"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Lập trình Java"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_mh">

                    <TextView
                        android:id="@+id/tv_lb_room"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Phòng Học:"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />

                    <TextView
                        android:id="@+id/tv_room"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="303-A2"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_room">

                    <TextView
                        android:id="@+id/tv_lb_gv"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Giảng viên:"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />

                    <TextView
                        android:id="@+id/tv_gv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Nguyễn Mạnh Sơn"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_st"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_gv">

                    <TextView
                        android:id="@+id/tv_lb_st"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Giờ bắt đầu:"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />

                    <TextView
                        android:id="@+id/tv_st"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="9:00"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_st">

                    <TextView
                        android:id="@+id/tv_lb_et"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Giờ kết thúc:"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />

                    <TextView
                        android:id="@+id/tv_et"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="11:00"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_et">

                    <TextView
                        android:id="@+id/tv_lb_status"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Trạng thái:"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Chưa điểm danh"
                        android:textColor="#FFF"
                        android:textSize="@dimen/textSize_subject" />
                </LinearLayout>

            </RelativeLayout>
            <ImageButton
                android:id="@+id/btn_checkin"
                android:src="@drawable/camera"
                android:layout_gravity="center_horizontal"
                android:background="#FFFFFF"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_dd"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="16dp"
                android:background="@drawable/custom_button"
                android:text="Điểm danh"
                android:textColor="#FFF"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/replaceFragment2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>